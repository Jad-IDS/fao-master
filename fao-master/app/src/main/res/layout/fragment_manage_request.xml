<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/gray_bg"
        android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
    <include layout="@layout/loading"/>
    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:fitsSystemWindows="true"
            >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/normal_margin"

                >



            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="2dp"
                    android:background="@color/white"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:visibility="gone"
                    app:cardUseCompatPadding="true"
                    android:padding="@dimen/normal_margin"
                    android:layout_gravity="center"
                    app:cardCornerRadius="2dp"


                    >

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/second_margin"
                        android:orientation="vertical">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:layout_marginLeft="@dimen/normal_margin"
                            android:layout_marginRight="@dimen/normal_margin"
                            android:layout_marginBottom="@dimen/normal_margin"
                            android:orientation="vertical"
                            android:padding="@dimen/second_margin"
                            >

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"
                                android:layout_marginTop="@dimen/big_margin"
                                android:orientation="horizontal">

                            <com.ids.fao.custom.CustomTextViewBold
                                    android:layout_width="@dimen/title_width"
                                    android:layout_height="wrap_content"
                                    android:textSize="@dimen/font"
                                    android:textColor="@color/black"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"

                                    android:text="@string/farmer_name"/>

                            <EditText
                                    android:layout_width="0dp"
                                    android:layout_weight="5"
                                    android:layout_height="@dimen/etHeight"
                                    android:background="@drawable/rectangular_white_border_gray"
                                    android:layout_gravity="start"

                                    android:paddingLeft="@dimen/normal_margin"
                                    android:paddingStart="@dimen/normal_margin"
                                    android:textSize="@dimen/font"
                                    android:textColor="@color/gray_text_dark"
                                    android:gravity="center_vertical"
                                    android:text="22222"
                                    />

                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="@dimen/big_margin"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">



                            <com.ids.fao.custom.CustomTextViewBold
                                    android:layout_width="@dimen/title_width"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:text="@string/from_date"
                                    android:textColor="@color/black"


                                    android:textSize="@dimen/font" />

                            <EditText
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/etHeight"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="@dimen/mini_margin"
                                    android:layout_marginRight="@dimen/mini_margin"

                                    android:layout_weight="1"
                                    android:background="@drawable/rectangular_white_border_gray"
                                    android:gravity="center_vertical"
                                    android:paddingStart="@dimen/normal_margin"
                                    android:paddingLeft="@dimen/normal_margin"
                                    android:textColor="@color/gray_text_dark"
                                    android:textSize="@dimen/font"

                                    />

                            <com.ids.fao.custom.CustomTextViewBold
                                    android:layout_width="@dimen/title_width"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:text="@string/to_date"
                                    android:textColor="@color/black"


                                    android:textSize="@dimen/font" />
                            <EditText
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/etHeight"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/mini_margin"
                                    android:layout_marginLeft="@dimen/mini_margin"

                                    android:layout_weight="1"
                                    android:background="@drawable/rectangular_white_border_gray"
                                    android:gravity="center_vertical"
                                    android:paddingStart="@dimen/normal_margin"
                                    android:paddingLeft="@dimen/normal_margin"
                                    android:textColor="@color/gray_text_dark"
                                    android:textSize="@dimen/font"

                                    />




                        </LinearLayout>


                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="@dimen/big_margin"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">



                            <com.ids.fao.custom.CustomTextViewBold
                                    android:layout_width="@dimen/title_width"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:text="@string/order_nbr"
                                    android:textColor="@color/black"


                                    android:textSize="@dimen/font" />

                            <EditText
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/etHeight"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginEnd="@dimen/mini_margin"
                                    android:layout_marginRight="@dimen/mini_margin"

                                    android:layout_weight="1"
                                    android:background="@drawable/rectangular_white_border_gray"
                                    android:gravity="center_vertical"
                                    android:paddingStart="@dimen/normal_margin"
                                    android:paddingLeft="@dimen/normal_margin"
                                    android:textColor="@color/gray_text_dark"
                                    android:textSize="@dimen/font"

                                    />

                            <com.ids.fao.custom.CustomTextViewBold
                                    android:layout_width="@dimen/title_width"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:text="@string/block_nbr"
                                    android:textColor="@color/black"


                                    android:textSize="@dimen/font" />
                            <EditText
                                    android:layout_width="0dp"
                                    android:layout_height="@dimen/etHeight"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginStart="@dimen/mini_margin"
                                    android:layout_marginLeft="@dimen/mini_margin"

                                    android:layout_weight="1"
                                    android:background="@drawable/rectangular_white_border_gray"
                                    android:gravity="center_vertical"
                                    android:paddingStart="@dimen/normal_margin"
                                    android:paddingLeft="@dimen/normal_margin"
                                    android:textColor="@color/gray_text_dark"
                                    android:textSize="@dimen/font"

                                    />




                        </LinearLayout>


                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:layout_marginTop="@dimen/big_margin"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">



                            <com.ids.fao.custom.CustomTextViewBold
                                    android:layout_width="@dimen/title_width"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:text="@string/order_status"
                                    android:textColor="@color/black"


                                    android:textSize="@dimen/font" />



                            <RelativeLayout

                                    android:layout_marginEnd="@dimen/mini_margin"
                                    android:layout_marginRight="@dimen/mini_margin"
                                    android:paddingStart="@dimen/normal_margin"
                                    android:paddingLeft="@dimen/normal_margin"
                                    android:layout_width="0dp"

                                    android:layout_height="@dimen/etHeight"
                                    android:layout_weight="1"
                                    android:background="@drawable/rectangular_white_border_gray"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    >

                                <ImageView
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:src="@drawable/arrow_down"

                                        android:layout_marginEnd="@dimen/normal_margin"
                                        />
                                <Spinner
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/etHeight"

                                        android:background="@color/transparent"
                                        android:textSize="@dimen/font"
                                        android:id="@+id/spOrderTypes"

                                        />

                            </RelativeLayout>




                            <com.ids.fao.custom.CustomTextViewBold
                                    android:layout_width="@dimen/title_width"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    android:text="@string/comfirm_status"
                                    android:textColor="@color/black"


                                    android:textSize="@dimen/font" />
                            <RelativeLayout

                                    android:layout_marginEnd="@dimen/mini_margin"
                                    android:layout_marginRight="@dimen/mini_margin"
                                    android:paddingStart="@dimen/normal_margin"
                                    android:paddingLeft="@dimen/normal_margin"
                                    android:layout_width="0dp"

                                    android:layout_height="@dimen/etHeight"
                                    android:layout_weight="1"
                                    android:background="@drawable/rectangular_white_border_gray"
                                    android:layout_gravity="center_vertical"
                                    android:gravity="center_vertical"
                                    >

                                <ImageView
                                        android:layout_width="12dp"
                                        android:layout_height="12dp"
                                        android:layout_alignParentRight="true"
                                        android:layout_alignParentEnd="true"
                                        android:layout_centerVertical="true"
                                        android:src="@drawable/arrow_down"

                                        android:layout_marginEnd="@dimen/normal_margin"
                                        />
                                <Spinner
                                        android:layout_width="match_parent"
                                        android:layout_height="@dimen/etHeight"

                                        android:background="@color/transparent"
                                        android:textSize="@dimen/font"
                                        android:id="@+id/spConfirmStatus"

                                        />

                            </RelativeLayout>




                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/second_margin"

                            android:paddingRight="@dimen/big_margin"
                            android:paddingEnd="@dimen/big_margin"
                            >


                        <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/second_margin"
                                android:layout_marginLeft="@dimen/second_margin"
                                android:background="@drawable/button_green"
                                android:paddingLeft="@dimen/second_margin"
                                android:paddingRight="@dimen/second_margin"
                                android:text="@string/find"
                                android:textColor="@color/white" />



                        <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/second_margin"
                                android:layout_marginLeft="@dimen/second_margin"
                                android:background="@drawable/button_save"
                                android:text="@string/add_new_order"
                                android:paddingRight="@dimen/second_margin"
                                android:paddingLeft="@dimen/second_margin"
                                android:textColor="@color/white" />


                    </LinearLayout>


                </LinearLayout>



            </androidx.cardview.widget.CardView>



            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="2dp"
                    android:background="@color/white"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_marginTop="@dimen/big_margin"
                    app:cardUseCompatPadding="true"
                    android:padding="@dimen/normal_margin"
                    android:layout_gravity="center"
                    app:cardCornerRadius="2dp"


                    >

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/second_margin"
                        android:orientation="vertical">
                    <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/rvOrders"/>


                </LinearLayout>



            </androidx.cardview.widget.CardView>


        </LinearLayout>
    </androidx.core.widget.NestedScrollView>


</LinearLayout>





</LinearLayout>