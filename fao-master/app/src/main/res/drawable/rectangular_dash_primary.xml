<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
<item android:state_pressed="true" >
    <shape android:shape="rectangle" >
        <corners
                android:radius="@dimen/normal_radius"  />

        <stroke
                android:dashGap="5dp"
                android:dashWidth="5dp"
                android:width="1dp"

                android:color="@color/primary" />
        <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        <gradient android:angle="-90" android:startColor="@color/white"
                android:endColor="@color/gray_medium_3"  />
    </shape>
</item>
<item android:state_focused="true">
    <shape android:shape="rectangle"  >
        <corners
                android:radius="@dimen/normal_radius" />
        <stroke
                android:dashGap="5dp"
                android:dashWidth="5dp"
                android:width="1dp"

                android:color="@color/primary" />
        <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        <solid android:color="@color/white"/>
    </shape>
</item>
<item >
    <shape android:shape="rectangle"  >
        <corners
                android:radius="@dimen/normal_radius" />
        <stroke
                android:dashGap="5dp"
                android:dashWidth="5dp"
                android:width="1dp"

                android:color="@color/primary" />
        <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />
        <solid android:color="@color/white"/>
    </shape>
</item>
</selector>