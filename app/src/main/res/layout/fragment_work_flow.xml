<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@color/gray_bg"
        android:layout_height="match_parent">
    <include layout="@layout/toolbar"/>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:fitsSystemWindows="true"
            >
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/normal_margin"

                >

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="2dp"
                    android:background="@color/white"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    app:cardUseCompatPadding="true"
                    android:padding="@dimen/normal_margin"
                    android:layout_gravity="center"
                    app:cardCornerRadius="2dp"


                    >
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="@dimen/normal_margin"
                        android:background="@color/white"
                        >




                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            >



                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="18dp"
                                android:layout_marginLeft="@dimen/normal_margin"
                                android:layout_marginRight="@dimen/normal_margin"
                                android:layout_marginBottom="@dimen/normal_margin"
                                android:orientation="vertical"
                                android:padding="@dimen/second_margin"
                                android:background="@drawable/rectangular_dash_primary">


                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="120dp"
                                    android:layout_marginTop="@dimen/normal_margin"
                                    android:background="@drawable/rectangular_white_border_gray"
                                    >

                                <com.ids.fao.custom.CustomTextViewBold
                                        android:layout_width="@dimen/title_width"
                                        android:layout_height="wrap_content"
                                        android:text=" لا يوجد ملاحظات سابقة "
                                        android:textColor="@color/gray_text_dark"
                                        android:layout_margin="@dimen/second_margin"

                                        android:textSize="@dimen/font" />
                            </LinearLayout>




                        </LinearLayout>

                        <com.ids.fao.custom.CustomTextViewMedium
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/title_dash_height"
                                android:paddingLeft="@dimen/big_margin"
                                android:paddingRight="@dimen/big_margin"
                                android:gravity="center_vertical"
                                android:textColor="@color/primary"
                                android:text="@string/last_step_notes"
                                android:background="@drawable/round_corder_dash_primary"
                                android:layout_marginLeft="@dimen/big_margin"
                                android:layout_marginStart="@dimen/big_margin"

                                />
                    </RelativeLayout>


                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="@dimen/big_margin"
                            android:layout_marginRight="@dimen/big_margin"
                            android:layout_marginTop="@dimen/big_margin"
                            android:orientation="horizontal">

                        <com.ids.fao.custom.CustomTextViewBold
                                android:layout_width="@dimen/title_width"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/font"
                                android:textColor="@color/black"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"

                                android:text="@string/role"/>

                        <EditText
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="@dimen/etHeight"
                                android:background="@drawable/rectangular_gray_border"
                                android:layout_gravity="start"
                                android:enabled="false"

                                android:paddingLeft="@dimen/normal_margin"
                                android:paddingStart="@dimen/normal_margin"
                                android:textSize="@dimen/font"
                                android:textColor="@color/gray_text_dark"
                                android:gravity="center_vertical"
                                android:text="محاسب"
                                />
                        <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="@dimen/big_margin"
                            android:layout_marginRight="@dimen/big_margin"
                            android:layout_marginTop="@dimen/big_margin"
                            android:orientation="horizontal">

                        <com.ids.fao.custom.CustomTextViewBold
                                android:layout_width="@dimen/title_width"
                                android:layout_height="wrap_content"
                                android:textSize="@dimen/font"
                                android:textColor="@color/black"
                                android:layout_gravity="center_vertical"
                                android:gravity="center_vertical"

                                android:text="@string/step"/>

                        <EditText
                                android:layout_width="0dp"
                                android:layout_weight="3"
                                android:layout_height="@dimen/etHeight"
                                android:background="@drawable/rectangular_gray_border"
                                android:layout_gravity="start"
                                android:enabled="false"

                                android:paddingLeft="@dimen/normal_margin"
                                android:paddingStart="@dimen/normal_margin"
                                android:textSize="@dimen/font"
                                android:textColor="@color/gray_text_dark"
                                android:gravity="center_vertical"
                                android:text="تبليغ المزارع بالقبض"
                                />

                    </LinearLayout>



                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/big_margin"

                            >



                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="18dp"
                                android:layout_marginLeft="@dimen/normal_margin"
                                android:layout_marginRight="@dimen/normal_margin"
                                android:layout_marginBottom="@dimen/normal_margin"
                                android:orientation="vertical"
                                android:padding="@dimen/second_margin"
                                android:background="@drawable/rectangular_dash_primary">


                            <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:layout_marginTop="@dimen/normal_margin"
                                    android:background="@drawable/rectangular_white_border_gray"
                                    >

                                <com.ids.fao.custom.CustomTextViewBold
                                        android:layout_width="@dimen/title_width"
                                        android:layout_height="wrap_content"
                                        android:textColor="@color/gray_text_dark"
                                        android:layout_margin="@dimen/second_margin"

                                        android:textSize="@dimen/font" />
                            </LinearLayout>




                        </LinearLayout>

                        <com.ids.fao.custom.CustomTextViewMedium
                                android:layout_width="wrap_content"
                                android:layout_height="@dimen/title_dash_height"
                                android:paddingLeft="@dimen/big_margin"
                                android:paddingRight="@dimen/big_margin"
                                android:gravity="center_vertical"
                                android:textColor="@color/primary"
                                android:text="@string/last_step_notes"
                                android:background="@drawable/round_corder_dash_primary"
                                android:layout_marginLeft="@dimen/big_margin"
                                android:layout_marginStart="@dimen/big_margin"

                                />
                    </RelativeLayout>


                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="@dimen/second_margin"
                            android:layout_gravity="end"
                            android:gravity="end"
                            android:paddingRight="@dimen/big_margin"
                            android:paddingEnd="@dimen/big_margin"
                            >


                        <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/second_margin"
                                android:layout_marginLeft="@dimen/second_margin"
                                android:background="@drawable/button_save"
                                android:text="@string/confirm"
                                android:textColor="@color/white" />



                        <Button
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/second_margin"
                                android:layout_marginLeft="@dimen/second_margin"
                                android:background="@drawable/button_cancel"
                                android:text="@string/decline"
                                android:textColor="@color/white" />


                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>




</LinearLayout>